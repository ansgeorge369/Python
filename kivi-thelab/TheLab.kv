<AnchorLayoutExample>:
    # right, left, center positions for Anchor
    anchor_x: "center"
    # top, bottom and center positions for Anchor
    anchor_y: "top"
    BoxLayout:
        size_hint: .2, .2
        Button:
            text: "A"
        Button:
            text: "B"

<BoxLayoutExample>:
    orientation: "horizontal"
    Button:
        text: "A"

        size_hint: .5, .5
        # size: "100dp", "60dp"
        # width: "100dp"
        # height: "60dp"
        # x, centre_x, right
        # y, centre_y, top
        pos_hint: { "centre_y": .5}

    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
        Button:
            text: "B4"
    Label:
        text: "C"


